<%= form_for @activity, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :description, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :type, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :type, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :impact, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :impact, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :effort, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :effort, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :profitability, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :profitability, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :reach, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :reach, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :total_hours, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :total_hours, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  activities_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
